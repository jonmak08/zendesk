<div class="container error-page main-content">
	<img alt="{{t 'oops'}}" src="{{asset '404.png'}}" />

	<h1>
		{{t 'oops'}}...

		{{#is error 'unauthorized'}}
			{{#link 'sign_in' class="btn btn-primary"}}
				Sign In
			{{/link}}
		{{/is}}

		{{#is error 'forbidden'}}
			{{t 'not_authorized'}}
		{{/is}}

		{{#is error 'not_found'}}
			{{t 'nonexistent_page'}}
		{{/is}}
	</h1>

	{{#link 'help_center' class="btn btn-primary"}}
		{{t 'back_to_homepage'}}
	{{/link}}
</div>