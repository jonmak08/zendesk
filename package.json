{
	"babel": {
		"plugins": [
			[
				"transform-react-jsx",
				{
					"pragma": "preact.h"
				}
			]
		],
		"presets": [
			"env"
		]
	},
	"browserslist": [
		">0.25%",
		"ie 11",
		"not op_mini all"
	],
	"devDependencies": {
		"autoprefixer": "^8.5.0",
		"axios": "^0.18.0",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.4",
		"babel-plugin-transform-react-jsx": "^6.24.1",
		"babel-preset-env": "^1.7.0",
		"clay-css": "^2.0.3",
		"copy-webpack-plugin": "^4.5.1",
		"css-loader": "^0.28.11",
		"eslint": "^4.19.1",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-prettier": "^2.6.0",
		"glob-all": "^3.1.0",
		"lodash.throttle": "^4.1.1",
		"mini-css-extract-plugin": "^0.4.0",
		"node-sass": "^4.9.2",
		"optimize-css-assets-webpack-plugin": "^4.0.1",
		"postcss-loader": "^2.1.5",
		"preact": "^8.2.9",
		"prettier": "^1.12.1",
		"purify-css": "^1.2.5",
		"purifycss-webpack": "^0.7.0",
		"sass-loader": "^7.0.1",
		"uglifyjs-webpack-plugin": "^1.2.5",
		"webpack": "^4.8.1",
		"webpack-cli": "^2.1.3",
		"webpack-merge": "^4.1.2"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"extends": [
			"plugin:prettier/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module"
		},
		"plugins": [
			"prettier"
		],
		"rules": {
			"indent": [
				2,
				"tab"
			],
			"prefer-const": 2,
			"prettier/prettier": 2,
			"quotes": [
				2,
				"single",
				{
					"avoidEscape": true
				}
			]
		}
	},
	"name": "liferay-zendesk-theme",
	"prettier": {
		"bracketSpacing": false,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"build": "webpack --config webpack.prod.js",
		"build:dev": "webpack --mode=development --config webpack.common.js --watch",
		"format": "prettier --write 'src/js/**/*.js'",
		"zip": "zip -r Liferay-Help-Center.zip dist -x *.zat*"
	},
	"version": "1.0.1"
}
